<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.vfeng.image.view.ECImageView
        android:id="@+id/imageEditorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewSwitcher
        android:id="@+id/drawClipSwitcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@anim/image_take_in"
        android:outAnimation="@anim/image_take_out">

        <include layout="@layout/image_doodle_mosaic_layout" />

        <include layout="@layout/image_clip_layout" />

    </ViewSwitcher>
</FrameLayout>